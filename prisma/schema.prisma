datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model GameAccount {
  @@map("game_account")
  id         Int     @id @default(autoincrement())
  name       String
  nickName   String
  username   String
  password   String
  gameServer String
  online String
}

model Device {
  @@map("device")
  id         Int     @id @default(autoincrement())
  imei       String
  name       String
  brand      String
  robotName   String
  robotId String
  status  String
  ip      String
  touchId String
}

model Task {
  @@map("task")
  id         Int     @id @default(autoincrement())
  date       String
  name       String
  taskNo     String
  deviceId   Int
  accountId  Int
  startTime  Int
  updateTime Int
  endTime    Int
  status String
  note  String
  taskCount Int @default(0)
  income Int
  realIncome Int
}

model TaskLog {
  @@map("task_log")
  id         Int     @id @default(autoincrement())
  imei       String
  nickName       String
  taskNo     String
  deviceId   Int
  accountId  Int
  taskName String
  note  String
  type String
  time Int
  taskCount Int
}
